<!DOCTYPE html>
<html>
  <head>
    <title>Database Results</title>
    <% include ../views/partials/header.ejs %>
  </head>
  <body>
    <div class="container">
      <h2>Database Results</h2>

      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(function(r) { %>
            <tr>
              <td><%= r.id %></td>
              <td><%= r.name %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <a class="btn btn-primary" href="/">Back to form</a>
      <p>Test GitHub deployment</p>
    </div>
  </body>
</html>
